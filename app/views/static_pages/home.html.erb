<% provide(:title, "Home") %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/postlink_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Postlinks Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Wretlinks Apps !</h1>

    <h2>This is the home page for the<a href="users#home"> Wretlinks </a>application.</h2>
    <h2>Write and Save your links here !</h2>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
